import React, { useState, useEffect } from "react";
import { useNavigate } from "react-router-dom";

export default function Dashboard() {
  const navigate = useNavigate();
  const [obras, setObras] = useState([]);
  const [loading, setLoading] = useState(true);
  const [searchTerm, setSearchTerm] = useState("");
  const [selectedObra, setSelectedObra] = useState(null);
  const [obraChildren, setObraChildren] = useState([]);

  useEffect(() => {
    fetchObras();
  }, []);

  useEffect(() => {
    if (selectedObra) {
      fetchObraChildren(selectedObra.id);
    }
  }, [selectedObra]);

  const fetchObras = async () => {
    try {
      setLoading(true);
      const res = await fetch("/api/levels?parentId=");
      if (res.ok) {
        const data = await res.json();
        setObras(data.filter(obra => !obra.completed));
      }
    } catch (err) {
      console.error("Erro ao carregar obras:", err);
    } finally {
      setLoading(false);
    }
  };

  const fetchObraChildren = async (parentId) => {
    try {
      const res = await fetch(`/api/levels?parentId=${parentId}`);
      if (res.ok) {
        const data = await res.json();
        setObraChildren(data);
      }
    } catch (err) {
      console.error("Erro ao carregar filhos:", err);
      setObraChildren([]);
    }
  };

  // Get bar color based on state
  const getBarColor = (level) => {
    if (level.completed) return "#10b981"; // Green
    if (level.startDate) return "#f97316"; // Orange
    return "#3b82f6"; // Blue
  };

  const getBarBgColor = (level) => {
    if (level.completed) return "#d1fae5";
    if (level.startDate) return "#fed7aa";
    return "#dbeafe";
  };

  const getChildRatio = (level) => {
    if (!level.childrenCount) return "â€”";
    const completed = level.completedChildren || 0;
    return `${completed}/${level.childrenCount}`;
  };

  const calculateWeeks = (startDate, endDate) => {
    if (!startDate || !endDate) return [];
    const start = new Date(startDate);
    const end = new Date(endDate);
    const weeks = [];
    let current = new Date(start);
    
    const dayOfWeek = current.getDay();
    const daysToMonday = dayOfWeek === 0 ? 1 : (1 - dayOfWeek + 7) % 7 || 7;
    current.setDate(current.getDate() + daysToMonday);
    
    let weekNum = 1;
    while (current <= end && weekNum <= 16) {
      const dateStr = current.toLocaleDateString("pt-PT", { 
        day: "2-digit", 
        month: "2-digit", 
        year: "numeric" 
      });
      weeks.push({ number: weekNum, label: `S${weekNum}: ${dateStr}` });
      current.setDate(current.getDate() + 7);
      weekNum++;
    }
    return weeks;
  };

  const filteredObras = obras.filter(obra =>
    obra.name.toLowerCase().includes(searchTerm.toLowerCase()) ||
    obra.description?.toLowerCase().includes(searchTerm.toLowerCase())
  );


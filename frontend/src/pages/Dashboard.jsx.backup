          </div>

          <div className="dashboard-search">
            <input
              type="text"
              placeholder="ðŸ” Pesquisar obras..."
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
              className="dashboard-search-input"
            />
          </div>

          {loading ? (
            <p className="dashboard-loading">A carregar obras...</p>
